{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "gutenlayouts/carousel",
    "version": "1.0.0",
    "title": "Carousel",
    "category": "gutenlayouts",
    "icon": "slides",
    "description": "A customizable carousel block for showcasing images or content.",
    "example": {},
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "attributes": {
        "status": {
            "type": "boolean",
            "default": false
        },
        "blockStyle": {
            "type": "object"
        },
        "resMode": {
            "type": "string",
            "default": "Desktop"
        },
        "heightType": {
            "type": "string",
            "default": "adaptive"
        },
        "columns": {
            "type": "object",
            "default": {
                "Desktop": 3,
                "Tablet": 2,
                "Mobile": 1
            }
        },
        "gaps": {
            "type": "object",
            "default": {
                "Desktop": 20,
                "Tablet": 15,
                "Mobile": 0
            }
        },
        "navType": {
            "type": "string",
            "default": "outside"
        },
        "heights": {
            "type": "object",
            "default": {
                "Desktop": "300px",
                "Tablet": "250px",
                "Mobile": "200px"
            }
        },
        "autoplay": {
            "type": "boolean",
            "default": false
        },
        "delay": {
            "type": "number",
            "default": 3000
        },
        "loop": {
            "type": "boolean",
            "default": true
        },
        "showArrows": {
            "type": "boolean",
            "default": true
        },
        "showPagination": {
            "type": "boolean",
            "default": false
        },
        "paginationColor": {
            "type": "string"
        },
        "pnSize": {
            "type": "string"
        },
        "paSize": {
            "type": "string"
        },
        "pRadius": {
            "type": "string"
        },
        "paRadius": {
            "type": "string"
        },
        "pgap": {
            "type": "string"
        },
        "navColor": {
            "type": "string"
        },
        "navbgColor": {
            "type": "string"
        },
        "navBorderColor": {
            "type": "string"
        },
        "navSize": {
            "type": "string"
        },
        "navIconSize": {
            "type": "string"
        },
        "navRadius": {
            "type": "string"
        },
        "navEdgeGap": {
            "type": "string"
        }
    },
    "textdomain": "gutenlayouts",
    "editorScript": ["file:./index.js"],
    "editorStyle": ["file:./index.css"],
    "style": ["file:./style-index.css", "gutenlayouts-swiper-style"],
    "viewScript": ["file:./view.js", "gutenlayouts-swiper-script"]
}
