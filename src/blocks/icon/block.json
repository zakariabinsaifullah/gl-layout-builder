{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "gutenlayouts/icon",
    "version": "0.1.0",
    "title": "Icon",
    "category": "gutenlayouts",
    "description": "Add a customizable svg icon to your content.",
    "supports": {
        "reusable": false,
        "html": false,
        "align": ["wide", "full"],
        "color": {
            "__experimentalSkipSerialization": true,
            "gradients": true,
            "link": false,
            "__experimentalDefaultControls": {
                "background": true,
                "text": true
            }
        },
        "__experimentalBorder": {
            "__experimentalSkipSerialization": true,
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "spacing": {
            "__experimentalSkipSerialization": true,
            "margin": true,
            "padding": true,
            "__experimentalDefaultControls": {
                "margin": false,
                "padding": false
            }
        },
        "shadow": {
            "__experimentalSkipSerialization": true
        }
    },
    "attributes": {
        "listTitle": {
            "type": "string"
        },
        "listDesc": {
            "type": "string"
        },
        "resMode": {
            "type": "string",
            "default": "Desktop"
        },
        "blockStyle": {
            "type": "object"
        },
        "tagName": {
            "type": "string",
            "default": "div"
        },
        "iconName": {
            "type": "string",
            "default": "wordpress"
        },
        "customSvgCode": {
            "type": "string"
        },
        "iconType": {
            "type": "string",
            "default": "fill"
        },
        "strokeWidth": {
            "type": "number",
            "default": 1.2
        },
        "sizes": {
            "type": "object",
            "default": {
                "Desktop": 60,
                "Tablet": 48,
                "Mobile": 32
            }
        },
        "iconSize": {
            "type": "number",
            "default": 60
        },
        "width": {
            "type": "number"
        },
        "justifyContent": {
            "type": "string"
        },
        "href": {
            "type": "string"
        },
        "linkTarget": {
            "type": "string"
        },
        "linkRel": {
            "type": "string"
        },
        "showTitle": {
            "type": "boolean",
            "default": false
        },
        "heading": {
            "type": "string"
        },
        "headingTag": {
            "type": "string",
            "default": "p"
        },
        "listGap": {
            "type": "string"
        },
        "titleColor": {
            "type": "string"
        },
        "titleSize": {
            "type": "string"
        }
    },
    "textdomain": "gl-layout-builder",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
