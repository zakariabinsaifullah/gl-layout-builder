{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "gutenlayouts/lightbox",
    "version": "0.1.0",
    "title": "Lightbox",
    "category": "gutenlayouts",
    "description": "Add a lightbox for images, videos, and maps.",
    "supports": {
        "anchor": true,
        "html": false,
        "align": ["left", "center", "right", "wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "uniqueId": {
            "type": "string",
            "default": ""
        },
        "blockStyle": {
            "type": "object"
        },
        "alignment": {
            "type": "string",
            "default": ""
        },
        "lightboxType": {
            "type": "string",
            "default": "poster"
        },
        "imagePoster": {
            "type": "object",
            "default": null
        },
        "posterIcon": {
            "type": "string",
            "default": "<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"currentColor\"><path d=\"M8 5v14l11-7z\" /></svg>"
        },
        "showPosterIcon": {
            "type": "boolean",
            "default": true
        },
        "imageSize": {
            "type": "string",
            "default": "thumbnail"
        },
        "buttonText": {
            "type": "string",
            "default": "See how it works"
        },
        "enableHeading": {
            "type": "boolean",
            "default": true
        },
        "enableSubHeading": {
            "type": "boolean",
            "default": true
        },
        "buttonHeadingText": {
            "type": "string",
            "default": "Watch Video"
        },
        "contentCaption": {
            "type": "string",
            "default": "gutenlayoutsblocks lightbox"
        },
        "contentType": {
            "type": "string",
            "default": "youtube"
        },
        "youtubeUrl": {
            "type": "string",
            "default": ""
        },
        "vimeoUrl": {
            "type": "string",
            "default": ""
        },
        "googleMapUrl": {
            "type": "string",
            "default": ""
        },
        "lighteffColor": {
            "type": "string"
        },
        "svgSize": {
            "type": "number"
        },
        "iconPadding": {
            "type": "object",
            "default": {
                "top": "15px",
                "right": "15px",
                "bottom": "15px",
                "left": "15px"
            }
        },
        "icoHvBgColor": {
            "type": "string"
        },
        "iconColor": {
            "type": "string"
        }
    },

    "textdomain": "gutenlayouts",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}
