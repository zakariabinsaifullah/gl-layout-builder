{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "gutenlayouts/advanced-toggle",
    "version": "0.1.0",
    "title": "Advanced Toggle",
    "category": "gutenlayouts",
    "description": "Professional binary toggle switcher with smooth animations.",
    "supports": {
        "anchor": true,
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true,
            "__experimentalDefaultControls": {
                "margin": false,
                "padding": false
            }
        }
    },
    "attributes": {
        "labelLeft": { "type": "string", "default": "Annually" },
        "labelRight": { "type": "string", "default": "Monthly" },
        "badgeLeft": { "type": "string", "default": "" },
        "badgeRight": { "type": "string", "default": "Save 20%" },
        "activeToggle": { "type": "string", "default": "left" },
        "toggleColor": { "type": "string", "default": "#2196F3" },
        "layoutStyle": { "type": "string", "default": "pill" },
        "animationType": { "type": "string", "default": "fade" },
        "alignment": { "type": "string", "default": "center" }
    },
    "providesContext": {
        "gutenlayouts/toggleState": "activeToggle"
    },
    "textdomain": "gl-layout-builder",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}
