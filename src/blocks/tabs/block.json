{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "gutenlayouts/tabs",
    "version": "0.1.0",
    "title": "Tabs",
    "category": "gutenlayouts",
    "description": "Shows content in tabbed format.",
    "supports": {
        "anchor": true,
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": false,
            "padding": false,
            "__experimentalDefaultControls": {
                "margin": false,
                "padding": false
            }
        },
        "__experimentalBorder": {
            "__experimentalSkipSerialization": false,
            "color": false,
            "radius": false,
            "style": false,
            "width": false
        }
    },
    "attributes": {
        "blockStyle": {
            "type": "object"
        },
        "alignMent": {
            "type": "string"
        },
        "tabTitles": {
            "type": "array",
            "default": []
        },
        "showTabDesc": {
            "type": "boolean",
            "default": false
        },
        "showTabIcon": {
            "type": "boolean",
            "default": false
        },
        "tabChildCount": {
            "type": "number",
            "default": 3
        },
        "tabTitleTag": {
            "type": "string",
            "default": "p"
        },
        "layout": {
            "type": "string",
            "default": "nxt_horizontal"
        },
        "horizontalAlign": {
            "type": "string"
        },
        "verticalAlign": {
            "type": "string"
        },
        "contentAlign": {
            "type": "string",
            "default": "left"
        },
        "tabNavPadding": {
            "type": "object",
            "default": {
                "top": "",
                "right": "",
                "bottom": "",
                "left": ""
            }
        },
        "tabNavBorder": {
            "type": "object",
            "default": {
                "color": "",
                "style": "",
                "width": ""
            }
        },
        "tabNavBorderRadius": {
            "type": "object",
            "default": {
                "top": "",
                "right": "",
                "bottom": "",
                "left": ""
            }
        },
        "tabNavColors": {
            "type": "object",
            "default": {
                "bg": "",
                "title": "",
                "description": ""
            }
        },
        "tabNavActiveColors": {
            "type": "object",
            "default": {
                "bg": "",
                "title": "",
                "description": "",
                "border": ""
            }
        },
        "titleSize": {
            "type": "string"
        },
        "descSize": {
            "type": "string"
        },
        "gap": {
            "type": "string"
        },
        "margin": {
            "type": "object",
            "default": {
                "top": "",
                "right": "",
                "bottom": "",
                "left": ""
            }
        },
        "verticalGap": {
            "type": "string"
        },
        "verticalTabWidth": {
            "type": "string"
        }
    },
    "textdomain": "gl-layout-builder",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "viewScript": ["file:./view.js"]
}
